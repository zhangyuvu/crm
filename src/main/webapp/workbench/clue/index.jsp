			var $source = $("#create-source");
			$source.empty();
			<%
				List<DicValue> sources = (List<DicValue>) application.getAttribute("source");
				for(DicValue dicValue : sources){
			%>
			$source.append("<option value='<%=dicValue.getValue()%>'><%=dicValue.getText()%></option>");
